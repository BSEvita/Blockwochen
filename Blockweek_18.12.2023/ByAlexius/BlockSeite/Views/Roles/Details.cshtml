 @model BlockSeite.Models.Role

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Role Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            <input value="@Html.DisplayFor(model => model.RoleName)" class="form-control" disabled />
        </dd>
        <dt class="col-sm-2">
            Admin
        </dt>
        <dd class="col-sm-10">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="isAdmin" disabled />
            </label>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RoleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
