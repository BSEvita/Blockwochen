@model User

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Username
        </dt>
        <dd class = "col-sm-10">
            <input value="@Html.DisplayFor(model => model.UserName)" class="form-control" disabled />
        </dd>
        <dt class = "col-sm-2">
            E-Mail
        </dt>
        <dd class = "col-sm-10">
            <input value="@Html.DisplayFor(model => model.Email)" class="form-control" disabled />
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            <input value="@Html.DisplayFor(model => model.Role.RoleName)" class="form-control" disabled />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
